/* pages/offer/offer.wxss */
.van-swipe-cell__right {
  position: absolute;
  top: 0;
  height: 100%;
  background-color: #f44336;
  width: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.van-swipe-cell__right {
  right: 0;
  -webkit-transform: translate3d(100%, 0, 0);
  transform: translate3d(100%, 0, 0)
}

.van-checkbox__icon {
    color: transparent;
    border: 6px solid #0056d6;
    border: 6px solid var(--checkbox-border-color,#0056d6);
}

.van-image__img {
  border-radius: 24rpx;
}

.van-submit-bar {
  z-index: 999;
}

.van-button-get{
  height: 70rpx !important;
  margin-left: 10rpx;
  background:linear-gradient(to right, #299ffd, #0056d6)
}